---
import Navigation from "../components/Navigation.astro";
import { pink } from "../components/constants/colors.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;

const textPrimary = "#00000DE";
const textSecondary = "#0000099";
const textTertiary = "#0000061";
const main = pink[300];
const light = pink[100];
const dark = pink[700];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Navigation />
    <slot />
  </body>
</html>
<style
  is:global
  define:vars={{ textPrimary, textSecondary, textTertiary, main, light, dark }}
>
  h1 {
    color: var(--textColor);
  }

  body {
    width: 100%;
    margin: 0;
    padding: 0;
    font-family: system-ui, sans-serif;
    background: #fff;
  }
  html {
    font-family: system-ui, sans-serif;
    background: #fff;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  h1 {
    fontsize: 2rem;
    fontweight: 500;
    lineheight: 1.2;
  }
</style>
