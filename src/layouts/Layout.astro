---
import Navigation from "../components/Navigation.astro";
import {
  pink,
  headerHeight,
  gray,
} from "../components/constants/constants.astro";

import "@fontsource/dancing-script";
interface Props {
  title: string;
}

const { title } = Astro.props;

const textPrimary = "#111111";
const textSecondary = "#777777";
const textTertiary = "#aaaaaa";
const main = pink[300];
const light = pink[100];
const dark = pink[700];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Navigation />
    <slot />
  </body>
</html>
<style
  is:global
  define:vars={{
    textPrimary,
    textSecondary,
    textTertiary,
    main,
    light,
    dark,
    headerHeight,
  }}
>
  h1 {
    text-align: center;
    font-size: 3rem;
    color: var(--textPrimary);
    font-family: "Dancing Sript", cursive;
  }

  h2 {
    font-size: 2rem;
    color: var(--textPrimary);
    font-family: "Dancing Script", cursive;
  }

  body {
    width: 100%;
    margin: 0;
    padding: 0;
    font-family: system-ui, sans-serif;
    background: #fff;
    margin-bottom: 2rem;
  }
  html {
    font-family: system-ui, sans-serif;
    background: #fff;
    & * {
      box-sizing: border-box;
    }
  }
</style>
